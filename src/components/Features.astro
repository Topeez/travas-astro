---
interface Feature {
    icon: any;
    title: string;
    description: string;
}

interface Props {
    features: Feature[];
    subtitle?: string;
    class?: string;
}

const { features, subtitle, class: className } = Astro.props;
---

<div
    class={`flex flex-col gap-12 md:grid md:grid-cols-12 w-full cs-container ${className || ""}`}
>
    <div class="space-y-16 col-span-12 py-12">
        <div class="space-y-8 text-center">
            <!-- Title se poÅ¡le jako slot -->
            <slot name="title" />
            {
                subtitle && (
                    <h3 class="text-muted-foreground text-xl text-center">
                        {subtitle}
                    </h3>
                )
            }
        </div>

        <div class="gap-6 grid sm:grid-cols-2 lg:grid-cols-4 text-center">
            {
                features.map((feature) => (
                    <div class="space-y-6">
                        <feature.icon
                            size={30}
                            class="mx-auto mb-4 text-foreground"
                        />

                        <h4 class="mb-2 font-bold text-2xl">{feature.title}</h4>
                        <p class="text-muted-foreground text-lg">
                            {feature.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</div>
