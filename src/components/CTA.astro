---
import { ArrowRight } from "@lucide/astro";
const range = (n: number) => Array.from({ length: n }, (_, i) => i);
---

<section
    class="relative bg-foreground py-8 sm:py-12 lg:py-16 overflow-hidden"
    aria-label="Kontaktní sekce"
>
    <div class="z-30 relative px-4 sm:px-6 lg:px-8 text-center cs-container">
        <h2
            class="font-bold text-background text-2xl sm:text-3xl md:text-4xl lg:text-5xl"
        >
            Máte zájem o mé služby?
        </h2>
        <p
            class="mx-auto mt-3 sm:mt-4 px-4 sm:px-0 max-w-2xl text-gray-100 text-base sm:text-lg md:text-xl"
        >
            Ozvěte se ještě dnes a získejte nezávaznou konzultaci a cenovou
            nabídku na míru
        </p>
        <div class="mt-6 sm:mt-8 lg:mt-10">
            <a
                href="#kontakt"
                class="group inline-block bg-background hover:bg-transparent px-6 sm:px-8 py-3 sm:py-4 border-2 border-background rounded-full font-bold text-popover-foreground hover:text-background text-base sm:text-lg transition"
                aria-label="Kontaktujte mě"
            >
                <span class="mr-2">Ozvat se</span>
                {/* Lucide ikona se vyrenderuje jako SVG */}
                <ArrowRight
                    size={20}
                    class="inline-block transition group-hover:translate-x-1"
                />
            </a>
        </div>
    </div>

    <div
        class="top-1/2 left-0 z-10 absolute flex flex-col justify-evenly items-start opacity-10 h-full -translate-y-1/2"
    >
        {
            range(4).map((i) => {
                const widths = [
                    "w-[120px]",
                    "w-[110px]",
                    "w-[100px]",
                    "w-[90px]",
                ];
                const translateXs = [
                    "translate-x-0",
                    "-translate-x-[10px]",
                    "-translate-x-[20px]",
                    "-translate-x-[30px]",
                ];
                return (
                    <div
                        class={`relative bg-linear-to-l from-transparent via-45% via-background to-background ${widths[i]} ${translateXs[i]} lg:w-100 h-8 sm:h-10 lg:h-12 lg:translate-x-0`}
                        aria-hidden="true"
                    >
                        <div class="top-0 right-0 absolute border-b-40 border-b-transparent sm:border-b-48 lg:border-b-64 border-l-40 border-l-foreground sm:border-l-48 lg:border-l-64 border-solid rotate-180" />
                    </div>
                );
            })
        }
    </div>

    <div
        class="top-1/2 right-0 z-10 absolute flex flex-col justify-evenly items-center opacity-10 h-full -translate-y-1/2"
    >
        {
            range(4).map((i) => {
                const widths = [
                    "w-[120px]",
                    "w-[110px]",
                    "w-[100px]",
                    "w-[90px]",
                ];
                const translateXs = [
                    "translate-x-0",
                    "translate-x-[10px]",
                    "translate-x-[20px]",
                    "translate-x-[30px]",
                ];
                return (
                    <div
                        class={`relative bg-linear-to-r from-transparent via-45% via-background to-background ${widths[i]} ${translateXs[i]} lg:w-100 h-8 sm:h-10 lg:h-12 lg:translate-x-0`}
                        aria-hidden="true"
                    >
                        <div class="top-0 left-0 absolute border-b-40 border-b-transparent sm:border-b-48 lg:border-b-64 border-l-40 border-l-foreground sm:border-l-48 lg:border-l-64 border-solid -rotate-90" />
                    </div>
                );
            })
        }
    </div>
</section>
