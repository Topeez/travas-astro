---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { ArrowRight } from "@lucide/astro";

import HeroSection from "../components/HeroSection.astro";
import Breadcrumb from "../components/Breadcrumb.astro";

import heroBgImg from "../assets/img/zaluzie2.jpg";
import venkovniImg from "../assets/img/venek_zaluzie_prizn.jpeg";
import interierImg from "../assets/img/IMG_7820.jpeg";

const list = [
    { id: 1, text: "Efektivní ochrana před sluncem" },
    { id: 2, text: "Zajištění soukromí a bezpečnosti" },
    { id: 3, text: "Energetická úspora díky tepelné izolaci" },
    { id: 4, text: "Moderní designové prvky exteriéru i interiéru" },
];

const breadcrumbItems = [
    { title: "Domů", href: "/" },
    { title: "Stínicí technika" },
];
---

<Layout
    title="Stínicí technika | Travas Stínění"
    description="Komplexní řešení stínění pro váš domov."
>
    <!-- HeroSection (React) -->
    <HeroSection
        title="Komfort, světlo a soukromí pod kontrolou - stínící technika pro moderní domov"
        backgroundImage={heroBgImg}
        placeholderColor="#5ca437"
    />

    <section
        id="stinici-technika"
        class="bg-background py-20 text-popover-foreground"
    >
        <div
            class="flex-col gap-12 md:grid md:grid-cols-12 w-full fflex cs-container"
        >
            <!-- Breadcrumb (Astro) -->
            <Breadcrumb items={breadcrumbItems} aria-label="Breadcrumb" />

            <div class="space-y-6 md:col-span-12">
                <h2 class="font-bold text-4xl md:text-5xl text-center">
                    Co je to <span class="text-foreground"
                        >stínicí technika?</span
                    >
                </h2>
                <p class="text-xl leading-relaxed">
                    Stínicí technika zahrnuje širokou škálu produktů navržených
                    pro regulaci světla, teploty a soukromí v interiéru i
                    exteriéru. Od žaluzií, rolet, markýz až po pergoly - vše
                    přizpůsobeno vašemu stylu a potřebám.
                </p>

                <div class="relative py-12">
                    {/* Vertical line (Desktop) */}
                    <div
                        class="hidden md:block top-0 left-1/2 absolute bg-gray-200 w-0.5 h-5/6 -translate-x-1/2 transform"
                    >
                    </div>
                    {/* Vertical line (Mobile) */}
                    <div
                        class="md:hidden top-0 left-4 absolute bg-gray-200 w-0.5 h-5/6"
                    >
                    </div>

                    {
                        list.map((item, index) => (
                            <div class="group relative mb-16 last:mb-0">
                                {/* Dot (Desktop) */}
                                <div class="hidden md:block top-8 left-1/2 z-10 absolute bg-foreground shadow-lg -ml-3 border-4 border-background rounded-full w-6 h-6" />
                                {/* Dot (Mobile) */}
                                <div class="md:hidden top-8 left-4 z-10 absolute bg-foreground shadow-lg -ml-3 border-4 border-background rounded-full w-6 h-6" />

                                {/* Card */}
                                <div
                                    class:list={[
                                        "bg-background rounded-xl shadow-lg p-8 relative flex items-center min-h-36 overflow-hidden md:w-[45%] ml-12 md:ml-0",
                                        index % 2 === 0
                                            ? "md:mr-auto justify-start text-left"
                                            : "md:ml-auto justify-end text-right flex-row-reverse",
                                    ]}
                                >
                                    <p class="z-10 relative max-w-xs font-semibold text-xl">
                                        {item.text}
                                    </p>

                                    <span
                                        class={`absolute font-black text-[180px] leading-none text-transparent opacity-50 text-outline-2 z-10 pointer-events-none select-none ${index % 2 === 0 ? "-right-8 -bottom-12" : "-left-8 -bottom-12"}`}
                                    >
                                        {"0" + item.id}
                                    </span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <div class="space-y-8 md:col-span-12">
                <div class="p-10 font-bold text-4xl text-center">
                    Tak co, které stínění bude pro Vás to <span
                        class="text-foreground">pravé?</span
                    >
                </div>

                <div
                    class="flex flex-col items-center gap-4 md:grid grid-cols-2 auto-rows-[350px] w-full"
                >
                    <a
                        href="/stinici-technika/venkovni-stineni"
                        class="group block relative bg-foreground shadow-sm hover:shadow-xl rounded-2xl w-full h-87.5 overflow-hidden transition-all hover:-translate-y-1 will-change-auto"
                    >
                        <Image
                            src={venkovniImg}
                            alt="Venkovní stínění"
                            width={800}
                            height={600}
                            class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                        />
                        <div
                            class="absolute inset-0 bg-linear-to-t from-black/90 via-black/40 to-transparent pointer-events-none"
                        >
                        </div>
                        <div
                            class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors duration-300 pointer-events-none"
                        >
                        </div>

                        <div
                            class="z-10 absolute inset-0 flex flex-col justify-end p-6 md:p-8 h-full pointer-events-none"
                        >
                            <div
                                class="transition-transform translate-y-2 group-hover:translate-y-0 duration-300 transform"
                            >
                                <div class="flex justify-between items-center">
                                    <h3
                                        class="font-bold text-background text-3xl"
                                    >
                                        Venkovní stínění
                                    </h3>
                                    <div
                                        class="bg-white/20 opacity-0 group-hover:opacity-100 backdrop-blur-sm p-2 rounded-full transition-all translate-x-4 group-hover:translate-x-0 duration-300"
                                    >
                                        <ArrowRight
                                            class="w-5 h-5 text-white"
                                        />
                                    </div>
                                </div>
                                <p
                                    class="opacity-80 group-hover:opacity-100 mt-3 max-w-md text-gray-200 line-clamp-2 leading-relaxed transition-opacity duration-300 delay-75"
                                >
                                    Stínění pro Vaše venkovní prostory
                                </p>
                            </div>
                        </div>
                    </a>

                    <a
                        href="/stinici-technika/interierove-stineni"
                        class="group block relative bg-foreground shadow-sm hover:shadow-xl rounded-2xl w-full h-87.5 overflow-hidden transition-all hover:-translate-y-1 will-change-auto"
                    >
                        <Image
                            src={interierImg}
                            alt="Interiérové stínění"
                            width={800}
                            height={600}
                            class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                        />
                        <div
                            class="absolute inset-0 bg-linear-to-t from-black/90 via-black/40 to-transparent pointer-events-none"
                        >
                        </div>
                        <div
                            class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors duration-300 pointer-events-none"
                        >
                        </div>

                        <div
                            class="z-10 absolute inset-0 flex flex-col justify-end p-6 md:p-8 h-full pointer-events-none"
                        >
                            <div
                                class="transition-transform translate-y-2 group-hover:translate-y-0 duration-300 transform"
                            >
                                <div class="flex justify-between items-center">
                                    <h3
                                        class="font-bold text-background text-3xl"
                                    >
                                        Interiérové stínění
                                    </h3>
                                    <div
                                        class="bg-white/20 opacity-0 group-hover:opacity-100 backdrop-blur-sm p-2 rounded-full transition-all translate-x-4 group-hover:translate-x-0 duration-300"
                                    >
                                        <ArrowRight
                                            class="w-5 h-5 text-white"
                                        />
                                    </div>
                                </div>
                                <p
                                    class="opacity-80 group-hover:opacity-100 mt-3 max-w-md text-gray-200 line-clamp-2 leading-relaxed transition-opacity duration-300 delay-75"
                                >
                                    Designové a funkční stínění pro váš
                                    interiér.
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
